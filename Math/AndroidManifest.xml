		     android:screenOrientation="landscape">
            
		</activity>
		<activity android:name="InstrucoesActivity"
		     android:screenOrientation="landscape">
            
		</activity>
		<activity android:name="ZoomActivity"
		     android:screenOrientation="landscape">
            
		</activity>
		<activity android:name="SelecaoDeProvaActivity"
		     android:screenOrientation="landscape">
            
		</activity>
		<activity android:name="SelecaoDeRankingActivity"
		     android:screenOrientation="landscape">
            
		</activity>
		<activity android:name="ConfigActivity"
		     android:screenOrientation="landscape">
            
		</activity>
		<activity android:name="LoadProvaActivity"
		     android:screenOrientation="landscape">
            
		</activity>
		<activity android:name="DeleteProvaActivity"
		     android:screenOrientation="landscape">
            
		</activity>
    </application>

</manifest>